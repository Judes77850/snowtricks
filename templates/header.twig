                <div class="menu-items first-color-bg mb-5 fs-1">
                    <li><a class="pixelify-sans-font text-decoration-none text-black" href="/">Accueil</a></li>
                    <li><a class="pixelify-sans-font text-decoration-none text-black" href="../articles">Figures</a>
                    </li>
                    <li><a class="pixelify-sans-font text-decoration-none text-black" href="../contact">Contact</a></li>
                </div>
            </div>
            <div class="logo">
                <a href="/" class="text-decoration-none">
                    <h1 class="pixelify-sans-font second-color fs-1">Snowtricks</h1>
                </a>
            </div>
        </div>
