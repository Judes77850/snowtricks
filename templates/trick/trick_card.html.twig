{# templates/trick_card.html.twig #}
{% for trick in tricks %}
    <a class="trick-card col-xl-4 col-md-6 mb-4" href="{{ path('trick_show', {'slug': trick.slug}) }}">
        <div>
            <div class="card">
                {% if trick.images is not empty %}
                    <img src="{{ asset('uploads/media/' ~ trick.images.first.path) }}" class="card-img-top object-fit-cover h-50" alt="{{ trick.name }}">
                {% else %}
                    <img src="assets/images/default-trick-image.jpg" class="card-img-top object-fit-cover h-50" alt="Image par dÃ©faut">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title pixelify-sans-font fs-2 text-center">{{ trick.name }}</h5>
                    <p class="card-text text-start">{{ trick.description|slice(0, 100) ~ '...' }}</p>
                </div>
            </div>
        </div>
    </a>
{% endfor %}
